import java.util.Scanner;

public class add {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        System.out.print("Enter a number: ");
        int num = sc.nextInt();

        int sum = 0;

        while (num > 0) {
                sum +=num;
                         num = sc.nextInt();

        }

        System.out.println("Sum of digits = " + sum);

        sc.close();
    }
}
